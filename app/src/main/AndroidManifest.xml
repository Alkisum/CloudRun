<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alkisum.android.cloudrun">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="com.alkisum.android.cloudrun.app.CloudRunApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.alkisum.android.cloudrun.monitor.MonitorActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.alkisum.android.cloudrun.history.HistoryActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.alkisum.android.cloudrun.history.SessionActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"/>
        <activity
            android:name="com.alkisum.android.cloudrun.history.AddSessionActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.alkisum.android.cloudrun.settings.SettingsActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="com.alkisum.android.cloudrun.settings.AboutActivity"
            android:configChanges="orientation|screenSize"/>

        <service android:name="com.alkisum.android.cloudrun.location.LocationUpdateService"/>

    </application>

</manifest>
